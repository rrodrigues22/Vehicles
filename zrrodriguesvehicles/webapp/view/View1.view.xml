<mvc:View controllerName="vehicles.zrrodriguesvehicles.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true" xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <smartTable:SmartTable
                id="st_monitor"
                xmlns:smartTable="sap.ui.comp.smarttable"
                xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
                entitySet="ZRDWCDS_VEHICLES"
                tableType="ResponsiveTable"
                header="{i18n>items}"
                persistencyKey="SmartTableAnalytical_Explored"
                class="sapUiResponsiveContentPadding"
                app:useSmartToggle="true"
                enableAutoBinding="true"
                initiallyVisibleFields="BrandDescription,ColorDescription,ColorId,Currency,Km,ModelDescription,PlateId,Price"
                showFullScreenButton="true"
                busyIndicatorDelay="{listView>/delay}"
                smartFilterId="sfb_monitor">
            </smartTable:SmartTable>
        </content>
    </Page>
</mvc:View>