<mvc:View controllerName="vehicles.zrrodriguesvehicles.controller.View1"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true">
    <Page id="page" title="{i18n>title}">
        <content>
           
                <smartFilterBar:SmartFilterBar id="smartFilterBar" liveMode="true" entitySet="ZRDWCDS_VEHICLES" persistencyKey="ContractsSmartFilterBar">
                    <smartFilterBar:controlConfiguration>
                        <smartFilterBar:ControlConfiguration key="BrandDescription" label="Marca" visibleInAdvancedArea="true" />
                        <smartFilterBar:ControlConfiguration key="ModelDescription" label="Modelo" visibleInAdvancedArea="true" />
                        <smartFilterBar:ControlConfiguration key="ColorDescription" label="Cor" visibleInAdvancedArea="true" />
                    </smartFilterBar:controlConfiguration>
                </smartFilterBar:SmartFilterBar>
            <smartTable:SmartTable
                id="st_monitor"
                xmlns:smartTable="sap.ui.comp.smarttable"
                xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
                entitySet="ZRDWCDS_VEHICLES"
                tableType="ResponsiveTable"
                header="{i18n>items}"
                persistencyKey="SmartTableAnalytical_Explored"
                class="sapUiResponsiveContentPadding"
                app:useSmartToggle="true"
                enableAutoBinding="true"
                initiallyVisibleFields="PlateId,BrandDescription,ModelDescription,ColorDescription,Currency,Price,Km"
                showFullScreenButton="true"
                busyIndicatorDelay="{listView>/delay}"
                smartFilterId="smartFilterBar"
                useExportToExcel="true"
                beforeExport="onBeforeExport"
                useVariantManagement="true"
                useTablePersonalisation="true"
                showRowCount="true"
                demandPopin="true"
                enableAutoColumnWidth="true">
            </smartTable:SmartTable>
        </content>
    </Page>
</mvc:View>